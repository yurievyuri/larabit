{
    "name": "yurievyuri/larabit",
    "description": "Laravel Bitrix24 connector",
    "type": "library",
    "authors": [
        {
            "name": "Yuri Yuriev"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/database": "v9.*",
        "illuminate/support": "^v9.*",
        "illuminate/console": "^v9.*"
    },
    "require-dev": {
        "orchestra/testbench": "^v7.*",
        "phpunit/phpunit": "^10.*"
    },

    "autoload": {
        "psr-4": {
            "Larabit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Larabit\\Test": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ]
    },
    "minimum-stability": "dev",
    "extra": {
        "laravel": {
            "providers": [
                "Larabit\\Providers\\EloquentFilterServiceProvider"
            ]
        }
    }
}
